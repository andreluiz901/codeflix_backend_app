{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			"node_modules",
			"dist",
			"__coverage",
			".devconteiner",
			".docker",
			"package-lock.json",
			"package.json",
			"jest.config.json",
			"tsconfig.json",
			"*.sh",
			".swcrc",
			".gitignore"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": { "useImportType": "off" },
			"complexity": {
				"noForEach": "off",
				"useLiteralKeys": "off",
				"noStaticOnlyClass": "off",
				"noThisInStatic": "off"
			},
			"suspicious": { "noAssignInExpressions": "off", "noExplicitAny": "off" }
		}
	},
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		},
		"formatter": {
			"quoteStyle": "single"
		}
	}
}
